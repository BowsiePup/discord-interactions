{
  "compilerOptions": {
    "strict": true,
    "lib": [
      "es2021"
    ],
    "target": "es2021",

    "moduleResolution": "node",
    "module": "esnext",

    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*"
  ]
}